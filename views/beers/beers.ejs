<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body class="container">
<header>
    <%- include('../partials/header.ejs') %>
</header>
<main>

    <h1 class="display-4 text-center">Nuestras cervezas</h1>
    <form action="/beers" method="POST" role="form">
        <div class="input-group rounded">
            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" name="criteria"/>
            <button type="submit" class="input-group-text border-0"><i class="fas fa-search"></i></button>
        </div>
    </form>
    <div class="row justify-content-center">
        <% beers.forEach(function (beer){ %>
            <div class="card border-light p-3" style="max-width:25em; margin: 0.8em">
                <div class="card-header lead text-center"><%- beer.Name %></div>
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%- beer.Image_Url %>" class="card-img-top" alt="imagen de la cerveza"
                             height="400">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text"><%- beer.Description %></p>
                        </div>
                    </div>
                    <div class="card-footer col-md-12 text-right">
                        <a href="/beers/<%= beer.Id %>" class="btn btn-warning">Detalles</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</main>
<footer>
    <%- include('../partials/footer.ejs') %>
</footer>
</body>
</html>
